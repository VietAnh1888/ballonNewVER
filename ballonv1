-- âš ï¸ Cáº¢NH BÃO: Cháº¡y script nÃ y sau khi vÃ o game, kiá»ƒm tra tÃªn ngÆ°á»i nháº­n.
-- âœ… Cáº­p nháº­t tÃªn ngÆ°á»i nháº­n á»Ÿ dÃ²ng dÆ°á»›i Ä‘Ã¢y:
local targetPlayerName = "3eaqrc6"

-- ğŸš¶ Di chuyá»ƒn Ä‘áº¿n ngÆ°á»i nháº­n
function moveToPlayer(playerName)
    local Players = game:GetService("Players")
    local target = Players:FindFirstChild(playerName)
    if not target or not target.Character or not target.Character:FindFirstChild("HumanoidRootPart") then
        warn("KhÃ´ng tÃ¬m tháº¥y ngÆ°á»i nháº­n hoáº·c ngÆ°á»i nháº­n chÆ°a táº£i xong.")
        return false
    end
    local myChar = Players.LocalPlayer.Character
    if myChar and myChar:FindFirstChild("HumanoidRootPart") then
        myChar:MoveTo(target.Character.HumanoidRootPart.Position + Vector3.new(2, 0, 0))
        return true
    end
    return false
end

-- ğŸ“¦ Láº¥y danh sÃ¡ch trÃ¡i cÃ¢y trong kho
function getAllFruits()
    local fruitStorage = game:GetService("Players").LocalPlayer:FindFirstChild("Backpack") or game:GetService("Players").LocalPlayer:WaitForChild("Backpack")
    local fruits = {}
    for _, item in pairs(fruitStorage:GetChildren()) do
        if item:IsA("Tool") and string.find(item.Name:lower(), "fruit") then
            table.insert(fruits, item)
        end
    end
    return fruits
end

-- ğŸ Táº·ng trÃ¡i cÃ¢y cho ngÆ°á»i chá»‰ Ä‘á»‹nh
function giftFruit(fruitTool, target)
    if not fruitTool then return end

    -- Giáº£ láº­p thao tÃ¡c chá»n trÃ¡i
    local humanoid = game.Players.LocalPlayer.Character:FindFirstChildOfClass("Humanoid")
    if humanoid then
        humanoid:EquipTool(fruitTool)
        wait(0.2)
    end

    -- Giáº£ láº­p táº·ng (náº¿u game cÃ³ sá»± kiá»‡n remote thÃ¬ cáº§n FireServer táº¡i Ä‘Ã¢y)
    local giftEvent = game:GetService("ReplicatedStorage"):FindFirstChild("GiftFruit")
    if giftEvent then
        giftEvent:FireServer(fruitTool, target)
    else
        warn("KhÃ´ng tÃ¬m tháº¥y RemoteEvent Ä‘á»ƒ táº·ng trÃ¡i.")
    end
    wait(0.5)
end

-- ğŸ” VÃ²ng láº·p táº·ng táº¥t cáº£ trÃ¡i
function giftAllFruitsToTarget()
    if not moveToPlayer(targetPlayerName) then return end
    wait(1)

    local fruits = getAllFruits()
    while #fruits > 0 do
        for _, fruit in pairs(fruits) do
            giftFruit(fruit, targetPlayerName)
            wait(0.4)
        end
        fruits = getAllFruits()
    end
    print("ğŸ‰ ÄÃ£ gá»­i háº¿t táº¥t cáº£ trÃ¡i!")
end

-- ğŸš€ Báº¯t Ä‘áº§u
giftAllFruitsToTarget()
