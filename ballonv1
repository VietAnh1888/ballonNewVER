-- Inject b·∫±ng Synapse X ho·∫∑c KRNL v√†o Pet Simulator 99

local CoreGui = game:GetService("CoreGui")
local lighting = game:GetService("Lighting")
local gui = Instance.new("ScreenGui", CoreGui)
gui.Name = "FPS_BOOST_GUI"

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 250, 0, 330)
frame.Position = UDim2.new(0, 10, 0, 100)
frame.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 8)

function createButton(text, posY, callback)
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(1, -20, 0, 30)
    btn.Position = UDim2.new(0, 10, 0, posY)
    btn.Text = text
    btn.TextColor3 = Color3.new(1,1,1)
    btn.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 18
    btn.MouseButton1Click:Connect(callback)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
end

-- üí• X√ìA TO√ÄN B·ªò V·∫¨T TH·ªÇ HI·ªÇN TH·ªä TRONG GAME
local function deleteVisuals()
    local trashTypes = {
        "MeshPart", "Part", "UnionOperation", "WedgePart", "TrussPart",
        "Decal", "Texture", "SurfaceAppearance", "Model", "Accessory"
    }

    for _, obj in pairs(workspace:GetDescendants()) do
        if table.find(trashTypes, obj.ClassName) then
            pcall(function() obj:Destroy() end)
        end
    end

    -- X√≥a pet v√† coin trong workspace n·∫øu c√≥
    pcall(function()
        if workspace:FindFirstChild("__THINGS") then
            workspace.__THINGS:Destroy()
        end
    end)
end

-- C√°c h√†m auto k√≠ch ho·∫°t
local function auto_anti_lag()
    lighting.GlobalShadows = false
    lighting.FogEnd = 1e10
    lighting.Brightness = 0
    lighting.ClockTime = 12
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("ParticleEmitter") or v:IsA("Trail") or v:IsA("Smoke") or v:IsA("Fire") or v:IsA("Decal") or v:IsA("Texture") then
            v:Destroy()
        elseif v:IsA("MeshPart") or v:IsA("Part") then
            v.Material = Enum.Material.SmoothPlastic
            v.Reflectance = 0
        end
    end
end

local function auto_mute()
    for _, s in pairs(game:GetDescendants()) do
        if s:IsA("Sound") then s.Volume = 0 end
    end
end

local function auto_hide_text()
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("BillboardGui") or v:IsA("TextLabel") then v:Destroy() end
    end
    workspace.DescendantAdded:Connect(function(obj)
        if obj:IsA("BillboardGui") or obj:IsA("TextLabel") then obj:Destroy() end
    end)
end

local function auto_hide_ui()
    for _, ui in pairs(CoreGui:GetChildren()) do
        if ui:IsA("ScreenGui") and ui.Name ~= "RobloxGui" and ui.Name ~= "FPS_BOOST_GUI" then
            ui.Enabled = false
        end
    end
end

local function auto_cap_fps()
    if setfpscap then
        setfpscap(30)
    end
end

-- Giao di·ªán c√°c n√∫t
createButton("üßπ Anti Lag", 0, auto_anti_lag)
createButton("üîá T·∫Øt √Çm Thanh", 40, auto_mute)
createButton("üî¢ T·∫Øt Damage/Coins", 80, auto_hide_text)
createButton("üöÄ FPS Cap = 30", 120, auto_cap_fps)
createButton("‚ùå T·∫Øt UI ph·ª•", 160, auto_hide_ui)
createButton("üí£ X√ìA H√åNH ·∫¢NH V·∫¨T TH·ªÇ", 200, deleteVisuals)

-- N√∫t Black Screen
createButton("üñ§ Black Screen", 240, function()
    local black = Instance.new("Frame", CoreGui)
    black.Name = "BLACKOUT"
    black.Size = UDim2.new(1, 0, 1, 0)
    black.BackgroundColor3 = Color3.new(0, 0, 0)
    black.ZIndex = 9998

    local button = Instance.new("ImageButton", black)
    button.Size = UDim2.new(0, 300, 0, 170)
    button.Position = UDim2.new(0.5, -150, 0.5, -85)
    button.BackgroundTransparency = 1
    button.ZIndex = 9999
    button.Image = "rbxasset://textures/ui/GuiImagePlaceholder.png" -- B·∫°n thay b·∫±ng ·∫£nh b
