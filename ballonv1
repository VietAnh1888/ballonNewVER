-- Inject b·∫±ng KRNL, Synapse X trong Pet Simulator 99

-- GUI kh·ªüi t·∫°o
local CoreGui = game:GetService("CoreGui")
local gui = Instance.new("ScreenGui", CoreGui)
gui.Name = "FPS_BOOST_GUI"

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 250, 0, 300)
frame.Position = UDim2.new(0, 10, 0, 100)
frame.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
frame.Active = true
frame.Draggable = true
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 8)

-- T·∫°o n√∫t ƒë∆°n gi·∫£n
function createButton(text, posY, callback)
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(1, -20, 0, 30)
    btn.Position = UDim2.new(0, 10, 0, posY)
    btn.Text = text
    btn.TextColor3 = Color3.new(1,1,1)
    btn.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
    btn.Font = Enum.Font.SourceSansBold
    btn.TextSize = 18
    btn.MouseButton1Click:Connect(callback)
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 6)
end

-- C√°c n√∫t t√≠nh nƒÉng
createButton("üßπ Anti Lag", 0, function()
    local lighting = game:GetService("Lighting")
    lighting.GlobalShadows = false
    lighting.FogEnd = 1e10
    lighting.Brightness = 0
    lighting.ClockTime = 12
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("ParticleEmitter") or v:IsA("Trail") or v:IsA("Smoke") or v:IsA("Fire") or v:IsA("Decal") or v:IsA("Texture") then
            v:Destroy()
        elseif v:IsA("MeshPart") or v:IsA("Part") then
            v.Material = Enum.Material.SmoothPlastic
            v.Reflectance = 0
        end
    end
end)

createButton("üîá T·∫Øt √Çm Thanh", 40, function()
    for _, s in pairs(game:GetDescendants()) do
        if s:IsA("Sound") then s.Volume = 0 end
    end
end)

createButton("üî¢ T·∫Øt Damage/Coins", 80, function()
    for _, v in pairs(workspace:GetDescendants()) do
        if v:IsA("BillboardGui") or v:IsA("TextLabel") then v:Destroy() end
    end
    workspace.DescendantAdded:Connect(function(obj)
        if obj:IsA("BillboardGui") or obj:IsA("TextLabel") then obj:Destroy() end
    end)
end)

createButton("üöÄ FPS Cap = 30", 120, function()
    if setfpscap then setfpscap(30)
    else warn("Executor kh√¥ng h·ªó tr·ª£ setfpscap()") end
end)

createButton("‚ùå T·∫Øt UI ph·ª•", 160, function()
    for _, ui in pairs(game.CoreGui:GetChildren()) do
        if ui:IsA("ScreenGui") and ui.Name ~= "RobloxGui" and ui.Name ~= "FPS_BOOST_GUI" then
            ui.Enabled = false
        end
    end
end)

-- BLACK SCREEN v√† N√öT ·∫®N ·∫¢NH
createButton("üñ§ Black Screen", 200, function()
    local black = Instance.new("Frame", CoreGui)
    black.Name = "BLACKOUT"
    black.Size = UDim2.new(1, 0, 1, 0)
    black.BackgroundColor3 = Color3.new(0, 0, 0)
    black.ZIndex = 9998

    -- N√∫t ·∫£nh ƒë·ªÉ t·∫Øt black screen
    local button = Instance.new("ImageButton", black)
    button.Size = UDim2.new(0, 300, 0, 170)
    button.Position = UDim2.new(0.5, -150, 0.5, -85)
    button.BackgroundTransparency = 1
    button.ZIndex = 9999
    button.Image = "rbxasset://textures/ui/GuiImagePlaceholder.png"

    -- Thay ·∫£nh ng∆∞·ªùi d√πng (t·∫°m t·ª´ file local)
    -- B·∫°n ph·∫£i d√πng c√¥ng c·ª• h·ªó tr·ª£ nh∆∞ Synapse X (c√≥ custom asset ID) ho·∫∑c t·∫£i l√™n imgur r·ªìi d√πng link web-to-image converter n·∫øu mu·ªën ·∫£nh th·ª±c

    button.MouseButton1Click:Connect(function()
        black:Destroy()
    end)
end)

createButton("‚ùé ƒê√≥ng GUI", 240, function()
    gui:Destroy()
end)
